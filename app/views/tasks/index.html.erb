<h1> My Tasks</h1>

<% @tasks.each do |task| %>
  <%= link_to task_path(task) do %>
    <p><%= task.title %>
        <% if task.completed? %>
          <input type="checkbox" checked>
        <% else %>
          <input type="checkbox">
        <% end %>
    </p>
  <% end %>
<% end %>


<%= link_to "Create a new task", new_path %>


